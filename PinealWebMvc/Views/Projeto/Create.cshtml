@model PinealWebMvc.Models.ViewModels.ProjetoFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Titlte"]</h1>

<h4>Projeto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Projeto.Name" class="control-label"></label>
                <input asp-for="Projeto.Name" class="form-control" />
                <span asp-validation-for="Projeto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Projeto.Email" class="control-label"></label>
                <input asp-for="Projeto.Email" class="form-control" />
                <span asp-validation-for="Projeto.Email" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Projeto.Vertente" class="control-label"></label>
                <input asp-for="Projeto.Vertente" class="form-control" />
                <span asp-validation-for="Projeto.Vertente" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Projeto.Tipo" class="control-label"></label>
                <input asp-for="Projeto.Tipo" class="form-control" />
                <span asp-validation-for="Projeto.Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Projeto.VertenteId" class="control-label"></label>
                <select asp-for="Projeto.VertenteId" asp-items="@(new SelectList(Model.Vertentes,"Id","name"))" class="form-control"></select>
            </div>
             <div class="form-group">
                <label asp-for="Projeto.TipoId" class="control-label"></label>
                <select asp-for="Projeto.TipoId" asp-items="@(new SelectList(Model.Tipos,"Id","name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
